<title>https://jubilantnestrestaurant.com</title>
<style>
  /* Reset */
  * { margin:0; padding:0; box-sizing:border-box; scroll-behavior:smooth; }
  html, body { height:100%; overflow-x:hidden; font-family:'Segoe UI', sans-serif; background:#000; color:#fff; }

  body { scroll-snap-type: y mandatory; }

  section { 
    height:100vh; 
    width:100%; 
    scroll-snap-align:start; 
    display:flex; 
    flex-direction:column; 
    justify-content:center; 
    align-items:center; 
    text-align:center; 
    padding:2rem;
    position:relative;
  }

  /* Header / Branding */
  header { 
    position:fixed; 
    top:0; left:0; 
    width:100%; 
    background:#000; 
    display:flex; 
    flex-direction:column; 
    justify-content:center; 
    align-items:center; 
    padding:1rem 0; 
    z-index:10; 
    border-bottom:2px solid gold;
  }
  header h1 { color:gold; font-size:2rem; letter-spacing:2px; }
  header h2 { color:#ccc; font-size:1rem; letter-spacing:1px; text-transform:uppercase; margin-top:0.2rem; }
  header p { color:#ccc; font-size:0.85rem; margin-top:0.2rem; }

  /* Section styles */
  #hero { 
    background: url('https://source.unsplash.com/1600x900/?restaurant,food') center/cover no-repeat; 
    color:#fff; 
  }
  #about { background:#111; color:#fff; }
  #menu { background:#222; color:#fff; }
  #reviews { background:#111; color:#fff; }
  #contact { background:#222; color:#fff; }

  h2.section-title { font-size:2.2rem; margin-bottom:1rem; color:gold; }

  p { max-width:650px; margin:0.5rem auto; line-height:1.6; }

  /* Buttons */
  .btn { background:gold; color:#000; padding:0.8rem 2rem; border:none; border-radius:25px; cursor:pointer; font-size:1rem; margin-top:1rem; transition:0.3s; font-weight:bold; }
  .btn:hover { background:#c49e00; }

  /* Review card */
  .review-card { background:#000; border:1px solid gold; padding:1rem; border-radius:15px; margin:1rem 0; max-width:500px; text-align:left; box-shadow:0 4px 10px rgba(255,215,0,0.2); }
  .review-card h4 { color:gold; margin-bottom:0.3rem; }
  .review-card p { color:#ccc; font-size:0.9rem; }

  /* Contact */
  .contact-info { margin:1rem 0; font-weight:bold; }
  a.contact-link { color:gold; text-decoration:none; }
  a.contact-link:hover { text-decoration:underline; }

  /* Footer */
  footer { padding:1rem; text-align:center; color:#ccc; font-size:0.9rem; border-top:1px solid gold; }

  /* Hero overlay */
  #hero::before {
    content:"";
    position:absolute;
    top:0; left:0; right:0; bottom:0;
    background:rgba(0,0,0,0.5);
    z-index:0;
  }
  #hero * { position:relative; z-index:1; }
</style>
